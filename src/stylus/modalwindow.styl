#modalwindow {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	.background {
		width: 100%;
		height: 100%;
		background-color: rgba(0,0,0,.6);
	}
	.modalwindow-content {
		position: absolute;
		left: 0;
		right: 0;
		width: 60%;
		margin: auto;
		border-radius: 2px;
		background-color: #fff;
		.button-close {
			position: absolute;
			top: 1.5rem;
			right: 1.5rem;
			color: $color_ui;
			font-size: .8rem;
		}
		.modalwindow-field {
			padding: 2rem;
		}
		.title {
			margin-bottom: .5rem;
			font-size: 1.2rem;
			font-weight: bold;
			text-align: center;
		}
		.text {
			font-size: .9rem;
			text-align: center;
		}
		.judge {
			margin-top: 2rem;
			text-align: center;
			button {
				margin: 0 1rem;
				padding: .2rem 1rem;
				font-size: 1rem;
			}
		}
	}
}
