.header {
	margin-bottom: 1.4rem;
	.tab-navi {
		display: flex;
	}
	.page-tab {
		position: relative;
		margin-right: 1rem;
		.name {
			padding: .5rem 1rem;
			border: 2px solid transparent;
			border-radius: 3px;
			color: #888;
			font-size: 1rem;
			font-family: 'Roboto',arial,sans-serif;
			line-height: 1;
			cursor: pointer;
			transition: all .15s ease-in-out;
		}
		.edit-name {
			display: none;
		}
		.delete {
			display: block;
			opacity: 0;
			position: absolute;
			top: -.9rem;
			right: -.9rem;
			width: 1rem;
			height: 1rem;
			vertical-align: middle;
			text-align: center;
			line-height: 1rem;
			cursor: pointer;
			transition: opacity .25s ease-in-out;
		}
		&.active {
			.name {
				border-color: $color_main;
				color: $color_main;
				cursor: text;
			}
		}
		&.edit {
			.name,.delete {
				display: none !important;
			}
			.edit-name {
				display: block;
			}
		}
		&:hover {
			.delete {
				display: block;
				opacity: 1;
			}
		}
	}
	.page-title {
		display: inline-block;
		color: #888;
		font-size: 1.1rem;
		font-family: 'Roboto',arial,sans-serif;
		letter-spacing: .1rem;
	}
}
