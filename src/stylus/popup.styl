@charset "UTF-8";

$color_main    = #1E88E5;
$color_success = #42a5f5;
$color_active  = #1976D2;
$color_nice    = #a2ea93;
$color_error   = #ff82a9;
$color_ui      = #bbb;

$input_color = #3b3b3b;
$input_bg    = #f3f3f3;
$input_active_bg = #ececec;

$root_image_path = '../img/';

@import 'base.styl';

/*-------------------------------------------------------------------------
	Init
/*-----------------------------------------------------------------------*/
html,body {
	-webkit-font-smoothing: antialiased;
}

html {
	font-size: 16px;
}

[data-content] {
	display: none;
}

#all {
	width: 40rem;
}

.wrap {
	position: relative;
	padding: 2.5rem;
}

.window-ui {
	position: absolute;
	top: 2.5rem;
	right: 2.5rem;
	color: $color_ui;
	font-size: .8rem;
	font-weight: bold;
}

/*-------------------------------------------------------------------------
	Header
/*-----------------------------------------------------------------------*/
@import 'header.styl';

/*-------------------------------------------------------------------------
	Input
/*-----------------------------------------------------------------------*/
.edit-name {
	max-width: 7em;
	padding: calc(.5rem - 1.5px) 1rem;
	border: 2px solid #bbb;
	border-radius: 3px;
	box-sizing: border-box;
	color: $input_color;
	font-size: 1rem;
	transition: background-color .1s ease-in-out;
	&:focus {
		background-color: $input_bg;
	}
}

.input-setting {
	padding: .3rem .4rem;
	border: none;
	color: $input_color;
	font-size: 1rem;
	transition: background-color .1s ease-in-out;
	&:focus {
		background-color: $input_bg;
	}
}

/*-------------------------------------------------------------------------
	Button
/*-----------------------------------------------------------------------*/
.button-list {
	display: flex;
	justify-content: space-between;
	align-items: center;
	&:after {
		display: none;
	}
	.button-list-utils {
		.button-utils {
			margin-right: .5rem;
			&:last-child {
				margin-right: 0;
			}
		}
	}
}

.button-jump {
	width: 1rem;
	height: 1rem;
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
	font-size: .8rem;
	transition: opacity .1s ease-in-out;
	&:hover {
		opacity: .8;
	}
	&[data-jump="setting"] {
		background-image: url($root_image_path + 'icon/setting.png');
	}

	&[data-jump="memo"] {
		background-image: url($root_image_path + 'icon/memo.png');
	}
}

.button {
	display: inline-block;
	border-radius: 3px;
	background-color: $color_main;
	color: #fff;
	font-size: .8rem;
	line-height: 1;
	cursor: pointer;
	transition: all .1s ease-in-out;
	&:hover {
		background-color: $color_success;
	}
	&:active {
		background-color: $color_active;
		letter-spacing: .1rem;
	}
	span {
		display: inline-block;
		min-width: 5rem;
		padding: .8rem 1rem;
	}
}

/*-------------------------------------------------------------------------
	Content
/*-----------------------------------------------------------------------*/
.content {
	margin-bottom: 2rem;
}

/*-------------------------------------------------------------------------
	Memo
/*-----------------------------------------------------------------------*/
[data-area_id] {
	display: none;
	&.active {
		display: block;
	}
}

.content-area {
	height: 20rem;
	border-radius: 2px;
}

.textarea {
	width: 100%;
	height: 100%;
	padding: 1rem;
	border: none;
	border-radius: 3px;
	box-sizing: border-box;
	color: $input_color;
	font-size: 1rem;
	letter-spacing: .1rem;
	resize: none;
	transition: all .15s ease-in-out;
	background-color: $input_bg;
	&:active,&:focus {
		background-color: $input_active_bg;
	}
}

/*-------------------------------------------------------------------------
	Setting
/*-----------------------------------------------------------------------*/
.setting-list {
	li {
		margin-bottom: 2rem;
		&:last-child {
			margin-bottom: 0;
		}
		label {
			display: inline-block;
			border-bottom: 1px solid #cbd7f4;
			font-size: .8rem;
			line-height: 1;
		}
		p {
			color: $color_main;
		}
		input {
			margin-right: .5rem;
		}
	}
}

/*-------------------------------------------------------------------------
	Setting
/*-----------------------------------------------------------------------*/
#message {
	position: absolute;
	right: 2rem;
	bottom: 1.4rem;
	font-size: .8rem;
	p {
		position: relative;
		&.success {
			color: $color_success;
		}
		&.nice {
			color: $color_nice;
		}
		&.error {
			color: $color_error;
		}
	}
}

/*-------------------------------------------------------------------------
	Modalwindow
/*-----------------------------------------------------------------------*/
@import 'modalwindow.styl';
